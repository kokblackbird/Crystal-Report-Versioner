<Window x:Class="ironmanx_04_2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crystal Report Archiver" Height="640" Width="900"
        Background="#0D1B22">
    <Window.Resources>
        <!-- Hyper-clean palette (dark theme) -->
        <Color x:Key="PrimaryLightBlue">#FF7FDBFF</Color>
        <Color x:Key="GlacierBlue">#FFA8EFFF</Color>
        <Color x:Key="CyanGlow">#FF00E5FF</Color>
        <Color x:Key="FrostedWhiteBlue">#FFDFF7FF</Color>

        <!-- Dark surface colors -->
        <Color x:Key="AppBg">#FF0D1B22</Color>
        <Color x:Key="Surface">#FF122733</Color>
        <Color x:Key="BorderDark">#FF1F3A46</Color>
        <Color x:Key="TextPrimary">#FFE6F9FF</Color>
        <Color x:Key="TextMuted">#FFA5C7D1</Color>

        <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource PrimaryLightBlue}"/>
        <SolidColorBrush x:Key="BrushGlacier" Color="{StaticResource GlacierBlue}"/>
        <SolidColorBrush x:Key="BrushCyan" Color="{StaticResource CyanGlow}"/>
        <SolidColorBrush x:Key="BrushFrosted" Color="{StaticResource FrostedWhiteBlue}"/>

        <SolidColorBrush x:Key="BrushAppBg" Color="{StaticResource AppBg}"/>
        <SolidColorBrush x:Key="BrushSurface" Color="{StaticResource Surface}"/>
        <SolidColorBrush x:Key="BrushBorderDark" Color="{StaticResource BorderDark}"/>
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="BrushTextMuted" Color="{StaticResource TextMuted}"/>

        <!-- TextBlock default -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
        </Style>

        <!-- TextBox style (dark) -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="Background" Value="{StaticResource BrushSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource BrushCyan}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource BrushCyan}"/>
        </Style>

        <!-- Button style (flat, modern) -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1400E5FF"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushCyan}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2600E5FF"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushCyan}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource BrushGlacier}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox style (dark) -->
        <Style x:Key="DarkGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorderDark}"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="{StaticResource BrushSurface}"/>
        </Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource DarkGroupBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Grid.Row="0" Margin="4,0,0,4" RecognizesAccessKey="True"
                                              ContentSource="Header"/>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                <ContentPresenter Margin="6"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Original file -->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Original (.rpt):"/>
        <TextBox x:Name="OriginalPathText" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="0" Grid.Column="2" Width="100" Margin="0,0,0,8" Content="Browse..." Click="BrowseOriginal_Click"/>

        <!-- Changed file -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Changed (.rpt):"/>
        <TextBox x:Name="ChangedPathText" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="1" Grid.Column="2" Width="100" Margin="0,0,0,8" Content="Browse..." Click="BrowseChanged_Click"/>

        <!-- Archive root -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Archive root:"/>
        <TextBox x:Name="ArchiveRootText" Grid.Row="2" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="2" Grid.Column="2" Width="100" Margin="0,0,0,8" Content="Browse..." Click="BrowseArchiveRoot_Click"/>

        <!-- Message -->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="Message:"/>
        <TextBox x:Name="MessageText" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

        <!-- Log -->
        <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Header="Log" Margin="0,0,0,8">
            <Grid Background="{StaticResource BrushSurface}">
                <TextBox x:Name="LogText" Margin="6" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ArchiveButton" Width="140" Margin="0,0,8,0" Content="Create Archive" Click="ArchiveButton_Click"/>
            <Button x:Name="OpenArchiveButton" Width="190" Content="Open Archive Folder" Click="OpenArchiveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
