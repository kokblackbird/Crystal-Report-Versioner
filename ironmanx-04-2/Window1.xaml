<Window x:Class="ironmanx_04_2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crystal Report Archiver" Height="640" Width="900">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Original file -->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Original (.rpt):"/>
        <TextBox x:Name="OriginalPathText" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="0" Grid.Column="2" Width="90" Margin="0,0,0,8" Content="Browse..." Click="BrowseOriginal_Click"/>

        <!-- Changed file -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Changed (.rpt):"/>
        <TextBox x:Name="ChangedPathText" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="1" Grid.Column="2" Width="90" Margin="0,0,0,8" Content="Browse..." Click="BrowseChanged_Click"/>

        <!-- Archive root -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Archive root:"/>
        <TextBox x:Name="ArchiveRootText" Grid.Row="2" Grid.Column="1" Margin="0,0,8,8"/>
        <Button Grid.Row="2" Grid.Column="2" Width="90" Margin="0,0,0,8" Content="Browse..." Click="BrowseArchiveRoot_Click"/>

        <!-- Message -->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="Message:"/>
        <TextBox x:Name="MessageText" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

        <!-- Log -->
        <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Header="Log" Margin="0,0,0,8">
            <Grid>
                <TextBox x:Name="LogText" Margin="6" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ArchiveButton" Width="130" Margin="0,0,8,0" Content="Create Archive" Click="ArchiveButton_Click"/>
            <Button x:Name="OpenArchiveButton" Width="170" Content="Open Archive Folder" Click="OpenArchiveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
